<div class="d-flex justify-content-center align-items-center">
  <div class="mt-3 col-6" style="text-align: left">
    <h1>Stupid Coaching</h1>
    <div id="question" class="mt-3 ps-3 py-2">
      <p><%=@message%></p>
      <p>—<em>You</em></p>
    </div>
    <div id="answer" class="mt-3 ps-3 py-2">
      <p><%=@answer%></p>
      <p>—<em>Your coach</em></p>
    </div>
    <%=link_to "Ask another question", ask_path%>
  </div>
</div>
